name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input csv data file name 
        type: string

      output_artifact_name:
        description: Name of cleaned file saved as .csv file
        type: string

      output_artifact_type:
        description: type of artifact file
        type: string

      output_artifact_desc:
        description: description of output file generated
        type: string

      min_price:
        description: Price lower limit
        type: float
        default: 10

      max_price:
        description: Price lower limit
        type: float
        default: 350

    command: >-
        python run.py  --input_artifact {input_artifact} \
          --output_artifact_name {output_artifact_name} \
          --output_artifact_type {output_artifact_type} \
          --output_artifact_desc {output_artifact_desc} \
          --min_price {min_price} \
          --max_price {max_price}


